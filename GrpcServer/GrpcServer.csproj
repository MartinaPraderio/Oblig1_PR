<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Services\GreeterService.cs" />
    <Compile Remove="Services\TransferUserService.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.27.0" />
    <PackageReference Include="Grpc" Version="2.41.1" />
    <PackageReference Include="Grpc.Tools" Version="2.41.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Google.Protobuf" Version="3.19.1" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Grpc" />
    <None Remove="Grpc.Tools" />
    <None Remove="Google.Protobuf" />
    <None Remove="Protos\greet.proto" />
    <None Remove="Protos\user.proto" />
    <None Remove="Protos\userRating.proto" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Domain\Domain.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Protos\domain.proto">
      <GrpcServices>Server</GrpcServices>
    </None>
  </ItemGroup>

<ItemGroup>
<Protobuf Include="Protos\domain.proto" GrpcServices="None" ProtoRoot="Protos\" />
</ItemGroup>

<ItemGroup>
  <Folder Include="Services\" />
</ItemGroup>
</Project>
